import pygame
import sys

# Initialisation de pygame
pygame.init()

# Constantes
LARGEUR = 800
HAUTEUR = 600
FPS = 60
VITESSE = 5

# Couleurs
NOIR = (0, 0, 0)
VERT = (0, 200, 0)

# Fenêtre
ecran = pygame.display.set_mode((LARGEUR, HAUTEUR))
pygame.display.set_caption("Zelda-like NSI")

# Horloge
clock = pygame.time.Clock()

# Joueur (un simple carré pour l'instant)
joueur = pygame.Rect(380, 280, 40, 40)

# Boucle principale
while True:
    clock.tick(FPS)

    # Gestion des événements
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()

    # Déplacements
    touches = pygame.key.get_pressed()
    if touches[pygame.K_LEFT]:
        joueur.x -= VITESSE
    if touches[pygame.K_RIGHT]:
        joueur.x += VITESSE
    if touches[pygame.K_UP]:
        joueur.y -= VITESSE
    if touches[pygame.K_DOWN]:
        joueur.y += VITESSE

    # Affichage
    ecran.fill(NOIR)
    pygame.draw.rect(ecran, VERT, joueur)
    pygame.display.flip()
